package org.jmedikit.plugin.gui;

import javax.annotation.PostConstruct;

import org.eclipse.swt.SWT;
import org.eclipse.swt.layout.FillLayout;
import org.eclipse.swt.layout.GridData;
import org.eclipse.swt.layout.GridLayout;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Spinner;

public class AngleControl {
	@PostConstruct
	public void constructGUI(Composite parent){
		parent.setLayout(new FillLayout());
		Composite controlContainer = new Composite(parent, SWT.NONE);
		GridLayout controlContainerLayout = new GridLayout(3, true);
		controlContainer.setLayout(controlContainerLayout);
		
		
		Spinner alpha = new Spinner(controlContainer, SWT.NONE);
		alpha.setData(new GridData(SWT.FILL, SWT.FILL, true, true));
		alpha.setMinimum(-90);
		alpha.setMaximum(90);
		
		Spinner beta = new Spinner(controlContainer, SWT.NONE);
		beta.setData(new GridData(SWT.FILL, SWT.FILL, true, true));
		beta.setMinimum(-90);
		beta.setMaximum(90);
		
		Spinner gamma = new Spinner(controlContainer, SWT.NONE);
		gamma.setData(new GridData(SWT.FILL, SWT.FILL, true, true));
		gamma.setMinimum(-90);
		gamma.setMaximum(90);
	}
}
