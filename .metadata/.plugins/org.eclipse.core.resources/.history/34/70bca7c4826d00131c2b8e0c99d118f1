package org.jmedikit.plugin.gui;

import java.util.ArrayList;

import org.eclipse.jface.dialogs.TitleAreaDialog;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.widgets.Control;
import org.eclipse.swt.widgets.Label;

public class PlugInDialog extends TitleAreaDialog{

	String title;
	
	String message;
	
	public ArrayList<PlugInDialogItem> items;
	
	public PlugInDialog(String title, String message) {
		super(ImageViewPart.getPartShell());
		this.title = title;
		this.message = message;
		items = new ArrayList<PlugInDialogItem>();
	}

	@Override
	public void create(){
		super.create();
		setTitle(title);
		setMessage(message);
	}
	
	@Override
	protected Control createDialogArea(Composite parent){
		Composite area = (Composite) super.createDialogArea(parent);
		Label l = new Label(area, SWT.NONE);
		for(PlugInDialogItem item : items){
			Composite dialogItem = item.getSWTObject(area);
			dialogItem.setParent(area);
		}
		return area;
	}
	
	public void addStringItem(String name, String defaultValue){
		items.add(new PlugInStringValue(name, defaultValue));
	}
}
