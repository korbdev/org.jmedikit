package org.jmedikit.plugin.tools;

import org.eclipse.swt.graphics.GC;
import org.eclipse.swt.widgets.Event;

public class WindowTool extends ATool{

	private float wc;
	private float ww;
	
	private int x_move;
	private int y_move;
	
	@Override
	public void actionMouseMove(Event e) {
		if(mouseDown){
			x_move = actual.x - start.x;
			y_move = actual.y - start.y;
		}
	}

	@Override
	public void actionMouseDown(Event e) {
		wc = canvas.sourceImage.getWindowCenter();
		ww = canvas.sourceImage.getWindowWidth();
	}

	@Override
	public void actionMouseUp(Event e) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public GC postCalculation(GC toDraw) {
		return toDraw;
	}

	@Override
	public GC preCalculation(GC toDraw) {
		canvas.sourceImage.setWindowCenter(wc+x_move);
		canvas.sourceImage.setWindowWidth(ww+y_move);
		return toDraw;
	}

}
